{
    "manifest_version": 3,
    "name": "Breadcrumps",
    "description": "Import and organize your AI conversations from ChatGPT, Claude, and more",
    "version": "0.1.0",
    "browser_specific_settings": {
        "gecko": {
            "id": "breadcrumps@breadcrumps.app",
            "strict_min_version": "109.0"
        }
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_icon": {
            "16": "icons/icons8-bread-crumbs-16.png",
            "48": "icons/icons8-bread-crumbs-48.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://chat.openai.com/*",
                "https://claude.ai/*"
            ],
            "js": [
                "content/index.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "scripts": [
            "background/service-worker.js"
        ],
        "type": "module"
    },
    "icons": {
        "16": "icons/icons8-bread-crumbs-16.png",
        "48": "icons/icons8-bread-crumbs-48.png"
    }
}